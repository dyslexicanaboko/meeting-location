<Window x:Class="MeetingLocation.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeetingLocation.Wpf"
        mc:Ignorable="d"
        Title="Meeting location" Height="186" Width="372">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="211*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TxtMeetingLocation" HorizontalAlignment="Left" Margin="10,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="347" IsReadOnly="True" AutomationProperties.HelpText="Click button for next meeting location" Text="Click button for next meeting location" FontSize="20" Height="37" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnMeetingLocation" Content="Get meeting location" HorizontalAlignment="Left" Margin="18,85,0,0" VerticalAlignment="Top" Width="332" Height="56" Click="BtnMeetingLocation_Click" Background="#FFE43232" Foreground="#FFFBF5F5" FontSize="20" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
